<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="teaching_degree_form_view" model="ir.ui.view">
            <field name="name">teaching.degree.form.view</field>
            <field name="model">teaching.degree</field>
            <field name="arch" type="xml">
                <form string="Degree">
                    <sheet>

                        <header>
                            <h1 class="o_horizontal_separator mt-4 mb-3 mb-4">Degree of
                                Teaching
                            </h1>
                        </header>
                        <group>
                            <group>
                                <field name="employee_ids"/>
                                <field name="year_degree" readonly="not employee_ids"/>
                                <field name="degree" readonly="not employee_ids"/>
                                <field name="antique_degree" readonly="not employee_ids"/>
                                <field name="date_in_degree" readonly="not employee_ids"/>
                                <field name="state" readonly="not employee_ids" widget="selection_badge"/>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="teaching_degree_tree_view" model="ir.ui.view">
            <field name="name">teaching.degree.tree.view</field>
            <field name="model">teaching.degree</field>
            <field name="arch" type="xml">
                <tree string="Degree">
                    <field name="employee_ids"/>
                    <field name="year_degree" readonly="not employee_ids"/>
                    <field name="degree" readonly="not employee_ids"/>
                    <field name="antique_degree" readonly="not employee_ids"/>
                    <field name="date_in_degree" readonly="not employee_ids"/>
                    <field name="state" readonly="not employee_ids" widget="selection_badge"/>
                </tree>
            </field>
        </record>

